{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date -u '+%Y-%m-%d %H:%M:%S'), SessionStart\" >> $HOME/.session_status && git rev-parse HEAD 2>/dev/null > $HOME/.session_commit"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date -u '+%Y-%m-%d %H:%M:%S'), UserPromptSubmit\" >> $HOME/.session_status"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date -u '+%Y-%m-%d %H:%M:%S'), Stop\" >> $HOME/.session_status"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/send_to_slack.sh"
          }
        ]
      }
    ]
  }
}
