# Example configuration for Claude Code Agent
# Copy this to .env and customize

# Required: Anthropic API Key
ANTHROPIC_API_KEY=your-api-key-here

# Optional: GitHub repository (auto-detected if not set)
# GITHUB_REPOSITORY=owner/repo

# Optional: PR number (auto-detected if not set)
# PR_NUMBER=123

# Optional: Check interval in seconds (default: 60)
# CHECK_INTERVAL=60

# Optional: Path to custom system prompt
# SYSTEM_PROMPT_PATH=/path/to/prompt.txt

# Optional: Run once and exit (default: false)
# RUN_ONCE=false
