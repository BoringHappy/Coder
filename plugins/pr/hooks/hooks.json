{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date -u '+%Y-%m-%d %H:%M:%S'), SessionStart\" >> \"${SESSION_STATUS_FILE:-/tmp/.session_status}\" && git rev-parse HEAD 2>/dev/null > \"${SESSION_COMMIT_FILE:-/tmp/.session_commit}\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date -u '+%Y-%m-%d %H:%M:%S'), UserPromptSubmit\" >> \"${SESSION_STATUS_FILE:-/tmp/.session_status}\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date -u '+%Y-%m-%d %H:%M:%S'), Stop\" >> \"${SESSION_STATUS_FILE:-/tmp/.session_status}\""
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/send_to_slack.sh"
          }
        ]
      }
    ]
  }
}
